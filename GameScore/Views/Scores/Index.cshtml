@{
    ViewBag.Title = "Game Score Page";
}

@*Title*@
<h2>Index</h2>


@*Commenting for razor/cshtml*@
<p>
    @Html.ActionLink("Add New Player", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Points)
        </th>
